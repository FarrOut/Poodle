server {
        listen 80;
        listen 443 ssl http2;
        listen [::]:443 ssl http2;
        server_name localhost local.poodle *.poodle;        

        ssl_certificate /etc/ssl/crt/local.poodle.crt;
        ssl_certificate_key /etc/ssl/private/local.poodle.pem;

        ssl_protocols TLSv1.2 TLSv1.1 TLSv1;

        root /var/www/html;

        index index.html index.nginx-debian.html;
}
